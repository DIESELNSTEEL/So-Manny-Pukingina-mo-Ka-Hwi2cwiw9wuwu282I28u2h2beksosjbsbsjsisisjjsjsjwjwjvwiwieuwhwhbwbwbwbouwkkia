    <script>
        // Elements
        const scriptInput = document.getElementById('scriptInput');
        const publishBtn = document.getElementById('publishBtn');
        const copyBtn = document.getElementById('copyBtn');
        const testBtn = document.getElementById('testBtn');
        const resultSection = document.getElementById('resultSection');
        const loadstringOutput = document.getElementById('loadstringOutput');
        const scriptUrl = document.getElementById('scriptUrl');
        const scriptLength = document.getElementById('scriptLength');
        const scriptLines = document.getElementById('scriptLines');
        const scriptStatus = document.getElementById('scriptStatus');
        const scriptName = document.getElementById('scriptName');
        const accessKey = document.getElementById('accessKey');
        const statusMessage = document.getElementById('statusMessage');
        
        // Generate random ID for script
        function generateScriptId() {
            return Math.random().toString(36).substring(2, 10) + Math.random().toString(36).substring(2, 10);
        }
        
        // Update script info
        function updateScriptInfo() {
            const text = scriptInput.value;
            scriptLength.textContent = text.length;
            scriptLines.textContent = text.split('\n').length;
            
            if (text.length === 0) {
                scriptStatus.textContent = 'Empty script';
                scriptStatus.style.color = '#ff5555';
            } else if (text.length < 50) {
                scriptStatus.textContent = 'Very short script';
                scriptStatus.style.color = '#ffaa00';
            } else {
                scriptStatus.textContent = 'Ready to publish';
                scriptStatus.style.color = '#00ff00';
            }
        }
        
        // Show status message
        function showStatus(message, type = 'success') {
            statusMessage.textContent = message;
            statusMessage.className = 'status ' + type;
            setTimeout(() => {
                statusMessage.className = 'status';
            }, 5000);
        }
        
        // Publish script function
        function publishScript() {
            const script = scriptInput.value.trim();
            const name = scriptName.value.trim() || 'MyScript';
            const key = accessKey.value.trim();
            
            if (!script) {
                showStatus('‚ùå Please write a script first!', 'error');
                return;
            }
            
            // Show publishing status
            showStatus('üì§ Publishing script...', 'success');
            scriptStatus.textContent = 'Publishing...';
            scriptStatus.style.color = '#ffff00';
            
            // Simulate publishing delay
            setTimeout(() => {
                // Generate unique script ID
                const scriptId = generateScriptId();
                
                // Create a simulated URL (in real app, this would upload to server)
                let url;
                if (key) {
                    url = `https://scriptpub.com/raw/${scriptId}?key=${key}`;
                } else {
                    url = `https://scriptpub.com/raw/${scriptId}`;
                }
                
                // Update UI with results
                const loadstring = `loadstring(game:HttpGet("${url}", true))()`;
                loadstringOutput.innerHTML = `${loadstring}<button class="quick-copy" onclick="copyLoadstring()">Copy</button>`;
                scriptUrl.textContent = url;
                
                // Save to localStorage (simulated database)
                try {
                    const scriptData = {
                        id: scriptId,
                        name: name,
                        script: script,
                        date: new Date().toISOString(),
                        accessKey: key || null
                    };
                    
                    // Store in browser (simulating server storage)
                    localStorage.setItem(`script_${scriptId}`, JSON.stringify(scriptData));
                    
                    // Save to "my scripts" list
                    let myScripts = JSON.parse(localStorage.getItem('myPublishedScripts') || '[]');
                    myScripts.push({
                        id: scriptId,
                        name: name,
                        url: url,
                        date: new Date().toLocaleString()
                    });
                    localStorage.setItem('myPublishedScripts', JSON.stringify(myScripts));
                    
                } catch (e) {
                    console.log('Script saved locally (browser storage)');
                }
                
                // Show result section
                resultSection.classList.add('active');
                
                // Update status
                scriptStatus.textContent = 'Published! Ready to execute';
                scriptStatus.style.color = '#00ff00';
                
                showStatus('‚úÖ Script published successfully! Loadstring ready.', 'success');
                
            }, 1500);
        }
        
        // Copy loadstring function
        function copyLoadstring() {
            const loadstring = loadstringOutput.textContent || loadstringOutput.innerText;
            
            navigator.clipboard.writeText(loadstring).then(() => {
                showStatus('üìã Loadstring copied to clipboard!', 'success');
                
                // Change button text temporarily
                const copyBtn = document.querySelector('.quick-copy');
                if (copyBtn) {
                    const originalText = copyBtn.textContent;
                    copyBtn.textContent = '‚úÖ Copied!';
                    setTimeout(() => {
                        copyBtn.textContent = originalText;
                    }, 2000);
                }
            }).catch(err => {
                // Fallback method
                const textArea = document.createElement('textarea');
                textArea.value = loadstring;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showStatus('üìã Loadstring copied!', 'success');
            });
        }
        
        // Test in Roblox function
        function testInRoblox() {
            if (!resultSection.classList.contains('active')) {
                showStatus('‚ö†Ô∏è Please publish your script first!', 'error');
                return;
            }
            
            showStatus('‚ö° Opening Roblox test environment...', 'success');
            
            // Create test window with instructions
            const testWindow = window.open('', '_blank');
            testWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Test Your Script</title>
                    <style>
                        body { 
                            background: #0a0a0a; 
                            color: #00ff00; 
                            font-family: monospace; 
                            padding: 20px; 
                        }
                        .container { max-width: 800px; margin: 0 auto; }
                        .code { 
                            background: #001100; 
                            padding: 15px; 
                            border-radius: 5px; 
                            border: 1px solid #00aa00;
                            margin: 15px 0;
                        }
                    </style>
                </head>
                <body>
                    <div class="container">
                        <h1>üß™ SCRIPT TEST ENVIRONMENT</h1>
                        <p>Your loadstring (copy this into Roblox executor):</p>
                        <div class="code">${loadstringOutput.textContent}</div>
                        <p><strong>Steps to test:</strong></p>
                        <ol>
                            <li>Open Roblox Studio or a Roblox game</li>
                            <li>Open your executor (Synapse, KRNL, etc.)</li>
                            <li>Paste the loadstring above</li>
                            <li>Execute the script</li>
                            <li>Check output in console</li>
                        </ol>
                        <p><em>Note: This is a simulated test environment. You need to actually execute in Roblox.</em></p>
                    </div>
                </body>
                </html>
            `);
        }
        
        // Event listeners
        scriptInput.addEventListener('input', updateScriptInfo);
        publishBtn.addEventListener('click', publishScript);
        copyBtn.addEventListener('click', copyLoadstring);
        testBtn.addEventListener('click', testInRoblox);
        
        // Initialize
        updateScriptInfo();
        
        // Auto-save script draft
        setInterval(() => {
            const script = scriptInput.value;
            if (script) {
                localStorage.setItem('scriptDraft', script);
                localStorage.setItem('scriptNameDraft', scriptName.value);
            }
        }, 5000);
        
        // Load draft if exists
        window.addEventListener('load', () => {
            const draft = localStorage.getItem('scriptDraft');
            const nameDraft = localStorage.getItem('scriptNameDraft');
            if (draft) {
                scriptInput.value = draft;
                if (nameDraft) scriptName.value = nameDraft;
                updateScriptInfo();
            }
        });
    </script>
</body>
</html>
